@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "";
}

<h1>@ViewData["Title"]</h1>
@* <h2 >Enter your email for the confirmation.</h2> *@
<hr />
<style>
    body {
        background-color: gainsboro;
        padding: 20px;
        
        align-items: center;
        height: 100vh;
        margin: 0
    }
    h2{
        text-align:center;
    }
</style>
<body>
    <h2>Enter your email for the confirmation.</h2>
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control rounded-pill shadow-sm" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg btn-pill shadow-sm">Resend</button>
                    <div class="mt-3">
                        <a href="@Url.Content("~/Identity/Account/Login")" style="color: black;">Back to login</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
