@model IEnumerable<HotelManagementSystem_Domain.Data.RoomTypeModel>

<!DOCTYPE html>
<html>
<head>
    <title>Hotel Rooms</title>
</head>
<body>

    <h2>Hotel Rooms</h2>

    <table border="1">
        <thead>
            <tr>
                <th>Room Type</th>
                <th>Price</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var roomType in Model)
            {
                <tr>
                  @*   <td>@roomType.RoomTypeName</td> *@
                    <td>@roomType.Price</td>
                    <td>
                        <img src="@Url.Content(roomType.ImageUrl)" alt="Room Image" width="100" height="100" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
