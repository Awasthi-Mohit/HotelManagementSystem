    <div class="row">
        <div class="col-10 offset-1">
            <h1 class="text-center" style="color:forestgreen">Booking Confirmed Successfully</h1>
            <br />
            <div class="mx-auto" style="max-width: 50%;">
                <img src="~/images/imagesconfiramation.png" style="width: 20%" />
            </div>
        </div>
    </div>

